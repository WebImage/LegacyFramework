		<field name="created" />
		<field name="created_by" required="true" default="0" />
		<field name="email" type="varchar" length="100" />
		<field name="enable" type="tinyint" required="true" default="1" />
		<field name="failed_login_attempts" />
		<field name="id" />
		<field name="last_activity" type="datetime" />
		<field name="last_login" type="datetime" />
		<field name="last_password_changed" type="datetime" />
		<field name="login_key" type="varchar" length="50" required="true" default="" />
		<field name="password" type="varchar" length="255" />
		<field name="password_answer" type="varchar" length="255" />
		<field name="password_question" type="varchar" length="255" />
